<Window x:Class="FlagDocUploader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlagDocUploader"
        mc:Ignorable="d"
        Title="ZIP Folder Uploader - Circular Flag" 
        Height="750" 
        Width="900"
        WindowStartupLocation="CenterScreen"
        Background="#F5F5F5">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        
        <Style TargetType="GroupBox">
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5,0,2"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="BorderThickness" Value="0"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#2196F3"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#154876"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#CCCCCC"/>
                    <Setter Property="Foreground" Value="#666666"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#757575"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#616161"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="DangerButton" TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="Background" Value="#F44336"/>
            <Setter Property="Foreground" Value="White"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D32F2F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
            Background="#154876" 
            Padding="20"
            Margin="-20,-20,-20,15"
            CornerRadius="0">
            <StackPanel>
                <TextBlock Text="Circular Flag Document Upload Utility" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White"/>
                <TextBlock Text="Upload Circular Flag documents (ZIP)" 
                      FontSize="14" 
                      Foreground="White" 
                      Opacity="0.9"
                      Margin="0,5,0,0"/>
            </StackPanel>
        </Border>

        <!-- Connection Status -->
        <Border Grid.Row="1" 
            Background="White" 
            BorderBrush="#DDDDDD" 
            BorderThickness="1"
            Padding="15"
            Margin="0,0,0,15"
            CornerRadius="4">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Database Status: " 
                      FontWeight="SemiBold" 
                      VerticalAlignment="Center"/>
                <TextBlock Text="{Binding ConnectionStatus}" 
                      Foreground="{Binding IsConnected, Converter={StaticResource BoolToColorConverter}}"
                      VerticalAlignment="Center"
                      Margin="5,0,20,0"
                      FontWeight="SemiBold"/>

                <!-- This matches the mockup's "Test Connection" position -->
                <Rectangle Width="1" Height="20" Fill="#DDDDDD" Margin="0,0,20,0"/>

                <Button Content="Test Connection" 
                   Command="{Binding TestConnectionCommand}"
                   Style="{StaticResource SecondaryButton}"
                   Padding="12,6"
                   VerticalAlignment="Center"/>
            </StackPanel>
        </Border>





        <!-- Configuration -->
        <GroupBox Grid.Row="2" Header="Configuration" Margin="0,0,0,15">
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Left Column - Folder Selection -->
                <StackPanel Grid.Column="0">
                    <GroupBox Header="Target Folder Selection (Circular Flag)" Padding="10">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <ComboBox Grid.Column="0"
                                ItemsSource="{Binding AvailableFolders}"
                                SelectedItem="{Binding SelectedFolder, Mode=TwoWay}"
                                DisplayMemberPath="FolderName"
                                IsEnabled="{Binding IsLoadingFolders, Converter={StaticResource InverseBoolConverter}}"
                                VerticalContentAlignment="Center"
                                Height="36"
                                Margin="5,0,0,0">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox" BasedOn="{StaticResource {x:Type ComboBox}}">
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding AvailableFolders.Count}" Value="0">
                                                    <Setter Property="Background" Value="#FFF3E0"/>
                                                    <Setter Property="ToolTip" Value="No folders available. Click Refresh or check database connection."/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ComboBox.Style>
                                </ComboBox>

                                <Button Grid.Column="1"
                               Command="{Binding RefreshFoldersCommand}"
                               Style="{StaticResource SecondaryButton}"
                               Width="100"
                               Height="36"
                               IsEnabled="{Binding IsLoadingFolders, Converter={StaticResource InverseBoolConverter}}">
                                    <StackPanel Orientation="Horizontal">
                                        <TextBlock Text="🔄" Margin="5,0,0,0"/>
                                        <TextBlock Text="Refresh"/>
                                    </StackPanel>
                                </Button>
                            </Grid>

                            <!-- Loading indicator -->
                            <!--<StackPanel Orientation="Horizontal" 
                               Margin="0,10,0,0"
                               Visibility="{Binding IsLoadingFolders, Converter={StaticResource BoolToVisibilityConverter}}">
                                <ProgressBar IsIndeterminate="True" Width="20" Height="20" Margin="0,0,10,0"/>
                                <TextBlock Text="Loading folders..." 
                                 FontStyle="Italic" 
                                 Foreground="#666666"
                                 VerticalAlignment="Center"/>
                            </StackPanel>-->
                        </StackPanel>
                    </GroupBox>
                </StackPanel>

                <!-- Right Column - File Selection & Inputs -->
                <StackPanel Grid.Column="2">
                    <!-- File Selection -->
                    <GroupBox Header="File Selection (Supported: .zip files)" Padding="10">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" 
                               Background="#F8F8F8" 
                               BorderBrush="#CCCCCC" 
                               BorderThickness="1"
                               CornerRadius="2"
                               Padding="10"
                               Height="36"
                               VerticalAlignment="Center">
                                    <TextBlock Text="{Binding SelectedFilePath}" 
                                     VerticalAlignment="Center"
                                     TextTrimming="CharacterEllipsis"
                                     ToolTip="{Binding SelectedFilePath}"/>
                                </Border>

                                <Button Grid.Column="1" 
                               Content="Browse ZIP..." 
                               Command="{Binding BrowseCommand}"
                               Style="{StaticResource PrimaryButton}"
                               Width="120"
                               Height="36"
                               Margin="5,0,0,0"/>
                            </Grid>

                            <!--<TextBlock Text="" 
                             FontSize="11" 
                             Foreground="#666666" 
                             Margin="0,5,0,0"
                             FontStyle="Italic"/>-->
                        </StackPanel>
                    </GroupBox>

                    <!-- Input Fields Grid -->
                    <!-- it will be uncomment for testing/debug purpose
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Label Grid.Row="0" Grid.Column="0" Content="Workspace ID:" Margin="0,0,10,10"/>
                        <TextBox Grid.Row="0" Grid.Column="1" 
                        Text="{Binding WorkspaceId, Mode=TwoWay}"
                        Margin="0,0,0,10"/>

                        <Label Grid.Row="1" Grid.Column="0" Content="Category ID:" Margin="0,0,10,10"/>
                        <TextBox Grid.Row="1" Grid.Column="1" 
                        Text="{Binding CategoryId, Mode=TwoWay}"
                        Margin="0,0,0,10"/>

                        <Label Grid.Row="2" Grid.Column="0" Content="Sub Category Id:" Margin="0,0,10,10"/>
                        <TextBox Grid.Row="2" Grid.Column="1" 
                        Text="{Binding SubCategoryId, Mode=TwoWay}"
                        Margin="0,0,0,10"/>

                        <Label Grid.Row="3" Grid.Column="0" Content="User ID:" Margin="0,0,10,0"/>
                        <TextBox Grid.Row="3" Grid.Column="1" 
                        Text="{Binding UserId, Mode=TwoWay}"/>
                    </Grid>
                    -->
                </StackPanel>
            </Grid>
        </GroupBox>
        <!-- Note Section -->
        <GroupBox Grid.Row="3" Header="Note" Margin="0,0,0,15">
            <Border Background="#FFF3E0" 
           BorderBrush="#FF9800" 
           BorderThickness="1"
           CornerRadius="4"
           Padding="15">
                <StackPanel>
                    <TextBlock Text="⚠️ IMPORTANT NOTE" 
                      FontSize="14" 
                      FontWeight="Bold" 
                      Foreground="#E65100"
                      Margin="0,0,0,8"/>

                    <TextBlock Text="When a ZIP file is uploaded, the previous folder, subfolders, and documents for that specific ZIP will be archived, and the latest upload will be shown as active." 
                      TextWrapping="Wrap"
                      Foreground="#5D4037"/>
                </StackPanel>
            </Border>
        </GroupBox>
        <!-- Progress Section -->
        <GroupBox Grid.Row="4" Header="Progress" Margin="0,0,0,15">
            <StackPanel>
                <!-- Current Operation -->
                <Border Background="#E3F2FD" 
               Padding="15" 
               CornerRadius="4"
               Margin="0,0,0,15">
                    <TextBlock Text="{Binding CurrentOperation}" 
                      FontSize="14" 
                      FontWeight="SemiBold"
                      Foreground="#1565C0"/>
                </Border>

                <!-- Progress Bar -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <ProgressBar Grid.Row="0" 
                        Height="25" 
                        Value="{Binding ProgressPercentage}" 
                        Maximum="100"
                        Margin="0,0,0,5">
                        <ProgressBar.Style>
                            <Style TargetType="ProgressBar">
                                <Setter Property="Foreground" Value="#2196F3"/>
                                <Setter Property="Background" Value="#E0E0E0"/>
                            </Style>
                        </ProgressBar.Style>
                    </ProgressBar>

                    <TextBlock Grid.Row="1" 
                      Text="{Binding ProgressPercentage, StringFormat={}{0:0}%}" 
                      HorizontalAlignment="Center"
                      FontWeight="Bold"
                      Foreground="#666666"/>
                </Grid>

                <!-- Counters -->
                <Grid Margin="0,20,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Folders Counter -->
                    <Border Grid.Column="0" 
                   Background="#F5F5F5" 
                   Padding="15" 
                   CornerRadius="4">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="FOLDERS" 
                              FontSize="11" 
                              FontWeight="Bold" 
                              Foreground="#757575"
                              Margin="0,0,0,5"/>
                            <TextBlock FontSize="20" FontWeight="Bold" Foreground="#2196F3">
                        <Run Text="{Binding ProcessedFolders}"/>
                        <Run Text="/" Foreground="#666666"/>
                        <Run Text="{Binding TotalFolders}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>

                    <!-- Separator -->
                    <Rectangle Grid.Column="1" 
                      Width="1" 
                      Height="40" 
                      Fill="#E0E0E0" 
                      Margin="20,0"/>

                    <!-- Files Counter -->
                    <Border Grid.Column="2" 
                   Background="#F5F5F5" 
                   Padding="15" 
                   CornerRadius="4">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="FILES" 
                              FontSize="11" 
                              FontWeight="Bold" 
                              Foreground="#757575"
                              Margin="0,0,0,5"/>
                            <TextBlock FontSize="20" FontWeight="Bold" Foreground="#4CAF50">
                        <Run Text="{Binding ProcessedFiles}"/>
                        <Run Text="/" Foreground="#666666"/>
                        <Run Text="{Binding TotalFiles}"/>
                            </TextBlock>
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Status Messages -->
                <Border Background="#E8F5E8" 
               BorderBrush="#4CAF50" 
               BorderThickness="1"
               Padding="15"
               CornerRadius="4"
               Visibility="{Binding StatusMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="📋 Status" 
                          FontWeight="Bold" 
                          Foreground="#2E7D32"
                          Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding StatusMessage}" 
                          TextWrapping="Wrap"
                          Foreground="#1B5E20"/>
                    </StackPanel>
                </Border>

                <!-- Error Messages (if needed in your ViewModel) -->
                <Border Background="#FFEBEE" 
               BorderBrush="#F44336" 
               BorderThickness="1"
               Padding="15"
               CornerRadius="4"
               Margin="0,10,0,0"
               Visibility="{Binding ErrorMessage, Converter={StaticResource StringToVisibilityConverter}}">
                    <StackPanel>
                        <TextBlock Text="❌ Error" 
                          FontWeight="Bold" 
                          Foreground="#C62828"
                          Margin="0,0,0,5"/>
                        <TextBlock Text="{Binding ErrorMessage}" 
                          TextWrapping="Wrap"
                          Foreground="#B71C1C"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </GroupBox>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="5" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,10,0,0">
            <Button Content="Process ZIP File" 
                   Command="{Binding ProcessCommand}"
                   Style="{StaticResource PrimaryButton}"
                   Width="150"/>
            <Button Content="Cancel" 
                   Command="{Binding CancelCommand}"
                   Style="{StaticResource DangerButton}"
                   Width="100"/>
        </StackPanel>
    </Grid>
</Window>
